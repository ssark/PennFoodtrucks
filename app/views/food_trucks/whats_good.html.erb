<h1>What's Good?</h1>

<table>
  <thead>
    <tr>
    <th>Name</th>
      <th>Cuisine</th>
      <th>Status</th>
      <th>Average Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ft_to_rate.keys.each do |food_truck| %>
      <tr class="hoverable">
        <td><%= food_truck.name %></td>
        <td><%= food_truck.cuisine %></td>
        <% if food_truck.open? %>
          <td><span class="green-text text-darken-2">open</span></td>
        <% else %>
            <td><span class="red-text text-darken-2">closed</span></td>
        <% end %>
        <td><div class="user_star" data-score=<%= @ft_to_rate[food_truck] %>></div></td>
        <td><%= link_to 'Show', food_truck %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
    $('.user_star').raty({
    readOnly: true,
    path: '/assets',
    number: 5,
    score: function() {
            return $(this).attr('data-score');
    }
  });
</script